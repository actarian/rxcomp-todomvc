{
	"targets": {
		"browser": {
			"compile": [{
				"input": "src/css/main.scss",
				"output": "docs/css/main.css",
				"minify": true
			}, {
				"input": "src/js/main.js",
				"output": "docs/js/main.js",
				"module": true,
				"rollup": {
					"format": "umd",
					"globals": {
						"rxjs": "rxjs",
						"rxjs/operators": "rxjs.operators",
						"rxcomp": "rxcomp"
					},
					"external": ["rxjs", "rxcomp"]
				},
				"minify": true
			}],
			"bundle": []
		}
	},
	"options": {
		"tfs": false,
		"server": {
			"src": "./docs",
			"path": "/rxcomp-todomvc/",
			"host": "localhost",
			"port": 40998
		}
	}
}
